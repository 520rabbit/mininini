/* pages/mine-info/mine-info.wxss */
.upload {
  display: flex;
  justify-content: left;
  width: 680rpx;
  margin: auto;
  box-sizing: border-box;
  line-height: 88rpx;
}

.upload > .title {
  width: 100rpx;
  font-size: 33rpx;
  color: #323233;
}

.upload > .line {
  width: 480rpx;
}

.upload > .language {
  width: 66rpx;
  margin-right: 20rpx;
}

.language > image {
  width: 100%;
  height: 70rpx;
}

.hint {
  margin-top: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #FFB595;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.password-update {
  width: 100%;
  line-height: 76rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
  background: #F2F2F2;
  color: #5D5D5D;
  font-size: 34rpx;
}