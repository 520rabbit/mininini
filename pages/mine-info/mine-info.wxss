/* pages/mine-info/mine-info.wxss */
.upload {
  display: flex;
  justify-content: left;
  width: 680rpx;
  margin: auto;
  box-sizing: border-box;
  line-height: 88rpx;
  overflow: hidden;
}

.upload > .title {
  width: 100rpx;
  font-size: 33rpx;
  color: #323233;
}

.upload > .line {
  width: 480rpx;
}

.upload > .language {
  width: 66rpx;
  margin-right: 20rpx;
}

.language > image {
  width: 100%;
  height: 70rpx;
}

.hint {
  margin-top: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #FFB595;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.password-update {
  width: 100%;
  line-height: 76rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
  background: #F2F2F2;
  color: #5D5D5D;
  font-size: 34rpx;
}

.password-options {
  margin-bottom: 100rpx;
}

/* footer */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  z-index: 99;
}

.footer > .back {
  width: 250rpx;
  background: #fff;
  border: 2rpx solid #DEDEDE;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.btn {
  width: 30rpx;
  height: 30rpx;
}