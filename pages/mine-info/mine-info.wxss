/* pages/mine-info/mine-info.wxss */
.upload {
  display: flex;
  justify-content: left;
  width: 680rpx;
  margin: auto;
  box-sizing: border-box;
  line-height: 88rpx;
  overflow: hidden;
}

.upload > .title {
  width: 150rpx;
  font-size: 33rpx;
  color: #323233;
}

.upload > .line {
  width: 480rpx;
}

.upload > .language {
  width: 66rpx;
  margin-right: 20rpx;
}

.language > image {
  width: 100%;
  height: 70rpx;
}

.hint {
  margin-top: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #FFB595;
  padding-left: 40rpx;
  box-sizing: border-box;
}

