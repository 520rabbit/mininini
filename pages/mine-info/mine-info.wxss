/* footer */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  z-index: 99;
}

.footer > .back {
  width: 250rpx;
  background: #fff;
  border: 2rpx solid #DEDEDE;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.btn {
  width: 30rpx;
  height: 30rpx;
}


/*头像*/
.myupload {
  position: relative;
  width: 80rpx;
  margin: auto;
}

.myupload > .help-img {
  width: 80rpx;
}

.myupload > .help-img > image {
  width: 100%;
  height: 80rpx;
  display: block;
}

.myupload > .img-show {
  position: absolute;
  display: block;
  top: -40rpx;
  left: 0;
  height: 80rpx;
  width: 80rpx;
  z-index: 2;
}

.myupload > .img-show > image {
  width: 100%;
  height: 80rpx;
}

.myupload-img {
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  height: 80rpx;
  line-height: 88rpx;
  width: 80rpx;
  z-index: 99;
}

.van-uploader__upload  {
  background: transparent!important;
}

.van-uploader__upload-icon {
  display: none!important;
}

.input-class {
  padding-right: 30rpx!important;
  box-sizing: border-box;
}


.we-img {
  border-bottom: 2rpx solid #F5F6F7;
}

.upload > .myupload > .img-show.wx-show {
  width: 60rpx
}

.upload > .myupload > .img-show.wx-show > img{
  width: 100%;
  height: 60rpx;
}