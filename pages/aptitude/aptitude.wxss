.info-title {
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 46rpx;
  color: #333;
  border-top: 20rpx solid #f2f2f2;
}

.input-class {
  padding-right: 30rpx!important;
  box-sizing: border-box;
}

.salary {
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #FF8853;
}

.upload {
  position: relative;
  width: 280rpx;
  margin: 30rpx auto;
}

.upload > .help-img {
  width: 280rpx;
}

.upload > .help-img > image {
  width: 100%;
  height: 364rpx;
}

.upload-img {
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  height: 364rpx;
  width: 280rpx;
  z-index: 99;
}

.van-uploader__upload-icon {
  display: none;
}

.van-uploader__upload {
  height: 364rpx!important;
  width: 280rpx!important;
  background: transparent!important;
}

/* 底部导航 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.footer > .back {
  width: 250rpx;
  background: #fff;
  border: 2rpx solid #DEDEDE;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.save > .btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.van-uploader__preview {
  display: none;
}