.job {
  width: 690rpx;
  margin: 10rpx auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 10rpx 5rpx #f2f2f2;
}

.job > .job-top {
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}


.job-top > .job-info {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
}


.job-info > .job-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 800;
}

.job-info > .job-price {
  font-size: 32rpx;
  color: #FF4F4F;
}

.job-top > .job-type {
  color: #959595;
  font-size: 28rpx;
}

.job-bottom {
  padding: 0 10rpx;
  box-sizing: border-box;
}

.job-bottom > .job-info {
  display: flex;
  justify-content: left;
  font-size: 30rpx;
  color: #959595;
  border-top: 2rpx solid #f2f2f2;
  line-height: 60rpx;
}

.job-bottom > .job-info > view {
  margin-right: 30rpx;
}

.icon-image {
  width: 24rpx;
  margin-right: 6rpx;
}

.icon-image.address {
    width: 20rpx;
}

.job-bottom > .address {
  font-size: 30rpx;
  color: #959595;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.title {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
  width: 100vw;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.title > image {
  width: 26rpx;
  margin-right: 10rpx;
}

.job-desc {
  font-size: 30rpx;
  color: #959595;
  padding: 0 30rpx;
  width: 100vw;
  box-sizing: border-box;
  word-wrap: break-word;
  white-space: normal;
  line-height: 48rpx;
}


/* // 底部 */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  z-index: 99;
}

.footer > .back {
  width: 250rpx;
  background: #fff;
  border: 2rpx solid #DEDEDE;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}