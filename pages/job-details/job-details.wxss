.job {
  width: 690rpx;
  margin: 10rpx auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 10rpx 5rpx #f2f2f2;
}

.job > .job-top {
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}


.job-top > .job-info {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
}


.job-info > .job-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 800;
}

.job-info > .job-price {
  font-size: 32rpx;
  color: #FF4F4F;
}

.job-top > .job-type {
  color: #959595;
  font-size: 28rpx;
}

.job-bottom {
  padding: 0 10rpx;
  box-sizing: border-box;
}

.job-bottom > .job-info {
  display: flex;
  justify-content: left;
  font-size: 30rpx;
  color: #959595;
  border-top: 2rpx solid #f2f2f2;
  line-height: 60rpx;
}

.job-bottom > .job-info > view {
  margin-right: 30rpx;
}

.icon-image {
  width: 24rpx;
  margin-right: 6rpx;
}

.icon-image.address {
    width: 20rpx;
}

.job-bottom > .address {
  font-size: 30rpx;
  color: #959595;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.title {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
  width: 100vw;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.title > image {
  width: 26rpx;
  margin-right: 10rpx;
}

.job-desc {
  font-size: 30rpx;
  color: #959595;
  padding: 0 30rpx;
  width: 100vw;
  box-sizing: border-box;
  word-wrap: break-word;
  line-height: 48rpx;
  white-space: pre-line;
}


/* // 底部 */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.footer > .back {
  width: 50rpx;
  background: #fff;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.back > image {
  width: 100%;
}

.share {
  width: 50rpx;
  line-height: 68rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.share > image {
  width: 100%;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}


.wrap{
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 690rpx;
  z-index: 99;
  overflow: scroll;
  margin-bottom: 50rpx;
}

.wrap > .sea-img  {
  width: 100%;
}

.wrap > .sea-img > image {
  width: 100%;
}

.wrap > .next {
  line-height: 60rpx;
  background: rgb(000, 000, 000, .6);
  position: fixed;
  top: 30%;
  right: 30rpx;
  width: 150rpx;
  text-align: center;
  border-radius: 30rpx;
  z-index: 999999;
  color: #fff;
}