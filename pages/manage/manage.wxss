

.banner {
  position: relative;
  width: 100vw;
  height: 280rpx;
  overflow: hidden;
}
.banner > image{
  width: 100%;
  height: 280rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  line-height: 80rpx;
  background: #fff;
}

.title > .create-manage {
  position: relative;
  font-size: 30rpx;
  color: #333;
}

.title > .create-manage::after {
  display: block;
  margin-left: 30rpx;
  content: '';
  width: 60rpx;
  height: 4rpx;
  background: #FF8853;
}

.title > .btn {
  position: relative;
  width: 340rpx;
  margin-top: 10rpx;
}

.btn > .issue-text {
  display: inline-block;
  width: 150rpx;
  border-radius: 30rpx;
  border: 2rpx solid #FF8853;
  background: #fff;
  color: #FF8853;
  font-size: 28rpx;
  line-height: 42rpx;
  padding: 0;
  border-top-left-radius: 0;
  margin-right: 20rpx;
}

.btn > .create-job {
  position: absolute;
  right: 0;
  top: 10rpx;
  display: inline-block;
  width: 150rpx;
  border-radius: 30rpx;
  border: 2rpx solid #FF8853;
  background: #FF8853;
  color: #fff;
  font-size: 28rpx;
  line-height: 42rpx;
  padding: 0;
  border-top-left-radius: 0;
}