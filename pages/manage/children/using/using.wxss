.job {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.job-item {
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.job-item > .job-name {
  color: #333;
}

.job-item > .job-price {
  color: #FF3636;
}

.job-req {
  font-size: 28rpx;
  color: #959595;
}
.job-req > text {
  margin-right: 8rpx;
}

.job-info {
  padding: 10rpx 0;
  box-sizing: border-box;
  width: 100%;
}

.list-item {
  display: flex;
  border-bottom: 10rpx solid #FFF9F6;
  padding: 0 30rpx;
}

.list-item > .checkbox {
  padding-top: 50rpx;
  width: 80rpx;
}

.all-select {
  position: fixed;
  bottom: 0;
  left: 0;
  padding-left: 30rpx;
  height: 100rpx;
  width: 100vw;
  border-top: 2rpx solid #aaaaaa; 
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}


.count {
  width: 300rpx;
  color: #959595;
  font-size: 28rpx;
  padding: 10rpx 0 ;
}

.all-select > .create {
  width: 300rpx;
  background: linear-gradient(to right, #FFB148, #FF8853);
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.all-select > .create::before {
  position: absolute;
  top: -2rpx;
  right: 0;
  content: '';
  display: block;
  height: 20rpx;
  width: 300rpx;
  background: linear-gradient(to right, #FFB148, #FF8853);
}

.create > image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}


.job-item > .share {
  background: #FF8853;
  padding:0 18rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  line-height: 42rpx;
  height: 42rpx;
  border-radius: 30rpx;
  border-top-left-radius: 0;
}