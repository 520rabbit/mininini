.module {
  border-top: 16rpx solid #f2f2f2;
}

.my-optatice {
  color: #fff;
}

.my-address {
  color: #ff5777;          
}

.picker-box {
  margin-top: 0rpx;
  width: 100%;
  position: fixed;
  top: 0;
}

.work-item {
  line-height: 80rpx;
  text-align: center;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 28rpx;
}

.work-confirm {
  line-height: 80rpx;
  border-top: 10rpx solid #f2f2f2;
  text-align: center;
  color: #ff5777;
}



/* 级联样式 */
.select {
  display: flex;
  justify-content: space-between;
  background: #fff;
  line-height: 80rpx;
  padding: 0 30rpx;
}

.select > .cancle-picker {
  color: #707070;
  font-size: 32rpx;
  
}

.select > .confirm-picker {
  color: #51A736;
  font-size: 32rpx;
}


.update {
  display: flex;
  padding: 0 30rpx;
  font-size: 26rpx;
  font-family:'Helvetica Neue', Arial, sans-serif;
  color: #333;
}

/* // 去掉xx */
.van-icon-close:before{
  content: ""!important;
}

.job-desc {
  border: 2rpx solid #cfcfcf!important;
  padding: 10rpx 30rpx!important;
  border-radius: 10rpx!important;
  line-height: 48rpx!important;
  min-height: 300rpx!important;
  margin-bottom: 150rpx!important;
}


/*职能分类*/
.job-list {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99;
  background: #fff;
  overflow: scroll;
}

/*月薪*/
.salary {
  color: #333;
  font-size: 30rpx;
  font-family: UICTFontTextStyleBody;
}


.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  z-index: 90;
}

.footer > .back {
  width: 250rpx;
  background: #fff;
  border: 2rpx solid #DEDEDE;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}


/*小城市联动*/
.citybody {
  width: 100vw;
  position: relative;
}

.item {
  line-height: 50px;
  text-align: center;
  font-size: 30rpx;
}

.cityheader {
  position: absolute;
  display: flex;
  width: 100vw;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  opacity: 1;
  color: #333;
  z-index: 99;
  line-height: 100rpx;
}

.city-true {
  color: #ff5777;
}

.citypicker {
  background: #fff;
  width: 100vw;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 100;
}


.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}