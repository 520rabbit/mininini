
.mine > .person {
  display: flex;
  justify-content: left;
  padding: 10rpx 30rpx;
  width: 100vw;
  box-sizing: border-box;
}

.person > .person-avatar {
  width: 100rpx;
  margin-right: 20rpx;
}

.person-avatar > .avatar {
  width: 100%;
}

.avatar > image {
  width: 100%;
  height: 100rpx;
}

.person > .person-info {
  width: 300rpx;
}

.person-info > .name {
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
}

.person-info > .job {
  font-size: 26rpx;
  color: #959595;
}

.person > .person-go {
  flex: 1;
  text-align: right;
  line-height: 108rpx;
}

.mine-banner {
  padding: 20rpx 30rpx 0 30rpx;
  width: 100vw;
  box-sizing: border-box;
  border-top: 15rpx solid #F2F2F2;
}

.mine-banner > image {
  width: 100%;
  height: 130rpx;
}

.mine-list .pass {
  color: #FFB08C;
}