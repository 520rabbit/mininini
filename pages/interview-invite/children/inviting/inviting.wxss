.job {
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f2f2f2;
}

.job:last-of-type {
  margin-bottom: 150rpx;
}

.job  > .job-state {
  display: flex;
  justify-content: space-between;
}

.job-state > .job-name {
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
}

.job-state > .state-step {
  color: #FF3636;
  font-size: 30rpx;
} 

.jon-info {
  display: flex;
  justify-content: space-between;
}

.interview-count {
  font-size: 28rpx;
  color: #959595;
  line-height: 46rpx;
}

.interview-count > text {
  margin: 10rpx;
}

.interview-count  > .job-color {
  font-size: 30rpx;
  color: #FFC15E;
  margin: 0;
}

.jon-info > .share {
  margin-top: 30rpx;
  border: 2rpx solid #FF8D5B;
  font-size: 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  border-top-left-radius: 0;
  color: #FF8D5B;
}
