.info-title {
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 46rpx;
  color: #333;
  border-top: 20rpx solid #f2f2f2;
}

.input-class {
  padding-right: 30rpx!important;
  box-sizing: border-box;
}

.salary {
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #FF8853;
}

.upload {
  position: relative;
  width: 280rpx;
  margin: 30rpx auto;
}

.upload > .help-img {
  width: 280rpx;
}

.upload > .help-img > image {
  width: 100%;
  height: 364rpx;
}

.upload > .img-show {
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  height: 364rpx;
  width: 280rpx;
  z-index: 2;
}

.upload > .img-show > image {
  width: 100%;
  height: auto;
}

.upload-img {
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  height: 364rpx;
  width: 280rpx;
  z-index: 99;
}

.van-uploader__upload-icon {
  display: none;
}

.van-uploader__upload {
  height: 364rpx!important;
  width: 280rpx!important;
  background: transparent!important;
}

/* 底部导航 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100vw;
  border-top: 2rpx solid #F6F6F6; 
  display: flex;
  justify-content: left;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.footer > .back {
  width: 250rpx;
  background: #fff;
  border: 2rpx solid #DEDEDE;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #959595;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.save {
  flex: 1;
  background: linear-gradient(to right, #FFC36F, #FF8853);
  line-height: 68rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.save > .btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

/*城市联动*/
.picker-view {
    width: 100%;
    display: flex;
    z-index:12;
    background-color: #fff;
    background: rgba(0, 0, 0, .2);
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0rpx;
    height: 40vh;
}
.btn {
    width: 100%;
    height: 90rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
    line-height: 90rpx;
    text-align: center;
    display: flex;
    background: rgba(255,255,255,.8);
    justify-content: space-between;
}
.cont {
    width: 100%;
    height: 389rpx;
}
.picker-item {
    line-height: 70rpx;
    margin-left: 5rpx;
    margin-right: 5rpx;
    text-align: center;
}
.address {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-bottom: 1rpx solid #f1f1f1;
}


/*小城市联动*/


.citybody {
  width: 100vw;
  position: relative;
}

.item {
  line-height: 50px;
  text-align: center;
  font-size: 30rpx;
}

.cityheader {
  position: absolute;
  display: flex;
  width: 100vw;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  opacity: 1;
  color: #333;
  z-index: 99;
  line-height: 100rpx;
}

.city-true {
  color: #ff5777;
}

.citypicker {
  background: #fff;
  width: 100vw;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 100;
}

.section {
  padding-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}


/* 企业性质 */

.van-icon-close:before{
  content: ""!important;
}

.work-item {
  line-height: 80rpx;
  text-align: center;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 28rpx;
}

.work-confirm {
  line-height: 80rpx;
  border-top: 10rpx solid #f2f2f2;
  text-align: center;
  color: #ff5777;
}

.van-uploader__preview {
  display: none;
}
