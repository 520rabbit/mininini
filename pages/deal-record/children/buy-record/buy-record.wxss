.record {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333;
}

.record .record-time {
  width: 300rpx;
  margin-top: 10rpx;
}

.record-time > .title {
  color: #333;
  font-size: 30rpx;
}

.record-time > .time {
  color: #959595;
  font-size: 28rpx;
}

.select-time {
  width: 200rpx;
  text-align: right;
}


.recharge {
  width: 690rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.recharge::after {
  display: block;
  content: "";
  width: 690rpx;
  height: 20rpx;
  background:linear-gradient(#FFF7F1, #ffffff);
  margin-top: 20rpx;
}

.recharge > .recharge-tiem {
  display: flex;
  justify-content: space-between;
}

.recharge-tiem.down {
  color: #959595;
  font-size: 28rpx;
}

.recharge-tiem > .icon {
  font-size: 32rpx;
  color: #FF3E3E;
}

.recharge-tiem > .title {
  font-size: 32rpx;
  color: #565656;
}