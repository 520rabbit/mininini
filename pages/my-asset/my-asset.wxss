/* pages/my-asset/my-asset.wxss */
.my-record {
  background-image: linear-gradient(to right, #FFB146, #FF8954);
  width: 690rpx;
  margin: auto;
  border-radius: 20rpx;
  overflow: hidden;
}

.my-record::after {
  position: absolute;
  top: 350rpx;
  left: 0rpx;
  display: block;
  content: '';
  width: 750rpx;
  height: 20rpx;
  background: #f5f5f5;
  z-index: 99;
}

.my-record > .deal {
  color: #fff;
  text-align: right;
  line-height: 60rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  padding-right:30rpx;
  box-sizing: border-box;
}

.my-record > .have-count {
  color: #fff;
  text-align: center;
  font-size: 78rpx;
}

.my-record > .count-title {
  color: #FFC8B2;
  text-align: center;
  font-size: 30rpx;
}

.money-take {
  display: flex;
  justify-content: space-between;
  background: rgba(255,255,255,.1);
  padding: 10rpx 0;
  box-sizing: border-box;
}

.money-take .all-coin {
  width: 50%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  position: relative;
}

.money-take .all-coin::after {
  position: absolute;
  top: 20rpx;
  right: 0;
  display: block;
  content: '';
  width: 2rpx;
  height: 40rpx;
  background: #fff;
  opacity: .8;
}

.money-take .use-coin {
  width: 50%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  opacity: .8;
}

.money {
  margin-top: 60rpx;
  padding-left:  30rpx;
  box-sizing: border-box;
}

.money > .title {
  font-size: 32rpx;
  line-height: 70rpx;
}